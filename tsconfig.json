    //     "src/components/basic/*"
    //   ]
    // },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": ["packages"],
  // "include": [
  //   "packages/**/*.ts",
  //   "packages/**/*.tsx",
  //   "packages/**/*.vue",
  // ],
  "exclude": [
    "node_modules",
    "**/__test?__",
    "**/dist"
  ]
